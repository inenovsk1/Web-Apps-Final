extends layout

block scripts
  script(src="javascripts/contactsSAP.js")

block content
  .jumbotron
    .form-group
      button.btn.btn-primary.btn-lg.btn-block#create(data-toggle="modal", data-target="#createUpdateModal") Insert a new Contact
    table.table.table-striped
      thead.thead-dark
        th Title
        th First Name
        th Last Name
        th Street
        th City
        th State
        th Zip
        th Phone
        th Email
        th How to contact?
        th Update
        th Delete
      tbody
        each contact in contacts
          tr
            td #{contact.title}
            td #{contact.firstName}
            td #{contact.lastName}
            td #{contact.street}
            td #{contact.city}
            td #{contact.state}
            td #{contact.zip}
            td #{contact.phone}
            td #{contact.email}
            td #{contact.how}
            td #[button.btn.btn-outline-primary.btn-sm#update(data-toggle="modal", data-target="#createUpdateModal") Update]
            td #[button.btn.btn-outline-danger.btn-sm#delete(data-toggle="modal", data-target="#deleteModal") Delete]

  .modal.fade#createUpdateModal(role="dialog")
    .modal-dialog
      .modal-content
        .modal-header
          h4.modal-title Create / Update
          button.close(data-dismiss="modal") &times
        .modal-body
          p put a form here when the modal starts working
        .modal-footer
          button.btn.btn-secondary(data-dismiss="modal") Close
          button.btn.btn-primary#submit Submit

  .modal.fade#deleteModal(role="dialog")
    .modal-dialog
      .modal-content
        .modal-header
          h4.modal-title Delete
          button.close(data-dismiss="modal") &times
        .modal-body
          p Are you sure you want to delete this contact?
        .modal-footer
          button.btn.btn-secondary(data-dismiss="modal") Close
          button.btn.btn-primary#submit Submit